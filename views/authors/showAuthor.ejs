<div class="container my-3">
    <h2><%= author.name %></h2>
    <div class="d-flex ms-auto my-3">
        <a href="/authors/<%= author.id %>/edit" class="btn btn-primary mx-2">Edit</a>
        <form action="/authors/<%= author.id %>?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
    <% if (booksByAuthor.length > 0) { %>
        <h2>Books By Author</h2>
        <% booksByAuthor.forEach( book => { %> 
            <a href="/books/<%= book.id %>" class="m-3">
                <img src="<%= book.coverImagePath %> " alt="cover image" class="img-fluid" width="100" height="150">
            </a>
    <% })}else{ %>
        <p class="text-muted">No Books to display.</p>
        <% } %>
</div>
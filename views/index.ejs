<h1 class="my-3">Recently Added</h1>
<div>
    <% if (books.length > 0) { %>
        <% books.forEach( book => { %> 
            <a href="/books/<%= book.id %>" class="m-3">
                <img src="<%= book.coverImagePath %> " alt="cover image" class="img-fluid" width="100" height="150">
            </a>
    <% })}else{ %>
        <p class="text-muted">No Books to display.</p>
        <% } %> 
</div>